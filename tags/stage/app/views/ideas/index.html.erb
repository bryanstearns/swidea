<h1>Ideas</h1>

<table>
  <tr>
    <th><%= link_to "Name", sort_param('search', Idea, "name") %></th>
    <th><%= link_to "Description", sort_param('search', Idea, "description") %></th>
    <th><%= link_to "Audience", sort_param('search', Idea, "audience") %></th>
    <th><%= link_to "Problem", sort_param('search', Idea, "problem") %></th>
    <th><%= link_to "Solution", sort_param('search', Idea, "solution") %></th>
  </tr>

<% for idea in @ideas %>
  <tr>
    <td><%=h idea.name %></td>
    <td><%=h idea.description %></td>
    <td><%=h idea.audience %></td>
    <td><%=h idea.problem %></td>
    <td><%=h idea.solution %></td>
    <td><%= link_to 'Show', idea %></td>
    <td><%= link_to 'Edit', edit_idea_path(idea) %></td>
    <td><%= link_to 'Destroy', idea, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

