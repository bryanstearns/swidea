<h1>Listing tasks</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Summary</th>
    <th>Description</th>
    <th>Due</th>
    <th>Priority</th>
    <th>Status</th>
  </tr>

<% for task in @tasks %>
  <tr>
    <td><%=h task.name %></td>
    <td><%=h task.summary %></td>
    <td><%=h task.description %></td>
    <td><%=h task.due %></td>
    <td><%=h task.priority %></td>
    <td><%=h task.status %></td>
    <td><%= link_to 'Show', task %></td>
    <td><%= link_to 'Edit', edit_task_path(task) %></td>
    <td><%= link_to 'Destroy', task, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New task', new_task_path %>
