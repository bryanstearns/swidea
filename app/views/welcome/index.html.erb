
<h1>Welcome to Idea2Profit</h1>

<% if logged_in? %>
  Hi, <%= current_user.login %>...
    <%= link_to "Log out", logout_url %>
<% else %>
  <%= link_to "Log in", login_url %>
  <%= link_to "Sign up", signup_url %>
<% end %>

<div id="mainleft">
<h2>Ideas</h2>
<ol>
  <% if @ideas.empty? %>
  <p>(New ideas coming soon!)</p>
  <% else %>
    <%= render :partial => @ideas %>
  <% end %>
  <%= link_to "Add your idea", new_idea_url if logged_in? %>
</ol>
</div>
